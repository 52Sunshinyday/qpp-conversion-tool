    <version>1.1.4-RELEASE</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>converter</artifactId>
  <name>Converter</name>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer />
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.jacoco</groupId>
        <artifactId>jacoco-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.10.4</version>
        <configuration>
          <show>private</show>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-checkstyle-plugin</artifactId>
        <configuration>
          <excludes>**/correlation/model/*</excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.jsonschema2pojo</groupId>
        <artifactId>jsonschema2pojo-maven-plugin</artifactId>
        <version>0.5.1</version>
        <executions>
          <execution>
            <goals>
              <goal>generate</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <includeHashcodeAndEquals>false</includeHashcodeAndEquals>
          <includeToString>false</includeToString>
          <outputDirectory>${basedir}/src/main/java</outputDirectory>
          <sourceDirectory>${basedir}/src/main/resources/pathing/schema</sourceDirectory>
          <targetPackage>gov.cms.qpp.conversion.correlation.model</targetPackage>
        </configuration>
      </plugin>
      <plugin>
        <groupId>gov.cms.qpp.conversion</groupId>
        <artifactId>generate-maven-plugin</artifactId>
        <version>1.1.4-RELEASE</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>generateErrorCodeDoc</goal>
              <goal>generateLuceneIndex</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <baseDir>${basedir}/../tools/docker/docker-artifacts/</baseDir>
        </configuration>
      </plugin>
    </plugins>
  </build>
